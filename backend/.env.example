# Backend ENV example for Render/local

# Server
PORT=3000
DB_PATH=./data/app.db
CORS_ORIGINS=

# Wert
WERT_ENV=sandbox
WERT_PARTNER_ID=your_wert_partner_id
# bearer | x-api-key
WERT_AUTH_SCHEME=bearer
# Sandbox: https://api.wert.io/partner/v2/sessions  (example; confirm with Wert docs)
# Production: https://api.wert.io/partner/v2/sessions
WERT_CREATE_SESSION_URL=https://api.wert.io/partner/v2/sessions
WERT_API_KEY=your_wert_api_key

# 1inch Proxy
ONEINCH_API_KEY=your_1inch_api_key
ONEINCH_UPSTREAM_BASE=https://api.1inch.dev

# Moralis Proxy
MORALIS_API_KEY=your_moralis_api_key
MORALIS_UPSTREAM_BASE=https://deep-index.moralis.io/api/v2.2
