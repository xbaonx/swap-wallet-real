# Backend ENV example for Render/local

# Server
PORT=3000
DB_PATH=./data/app.db
CORS_ORIGINS=
APP_ENV=dev
LOG_LEVEL=info
SENTRY_DSN=

# Direct buy URL (Transak)
# Example: https://global.transak.com?apiKey=YOUR_KEY&network=bsc&cryptoCurrencyCode=USDT
TRANSAK_BUY_URL=

# 1inch Proxy
ONEINCH_API_KEY=your_1inch_api_key
ONEINCH_UPSTREAM_BASE=https://api.1inch.dev

# Moralis Proxy
MORALIS_API_KEY=your_moralis_api_key
MORALIS_UPSTREAM_BASE=https://deep-index.moralis.io/api/v2.2

## Admin basic auth for /admin and admin APIs
BASIC_AUTH_USER=
BASIC_AUTH_PASS=

## Auth (optional) for write endpoints (e.g., /api/analytics/track, /api/notify/register)
JWT_SECRET=
HMAC_SECRET=

## Notifications (OneSignal)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

## Data retention in days for analytics cleanup
RETENTION_DAYS=60

## Private RPC URLs (comma-separated) for /api/rpc relay
PRIVATE_RPC_URLS=
